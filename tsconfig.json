{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "target": "es2016",
        "module": "ES2020",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "ts-node": {
        // Tell ts-node CLI to install the --loader automatically
        "esm": true
    }
}
